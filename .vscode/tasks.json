{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/Base_Classes/*.cpp",
                "${workspaceFolder}/src/Screens/*.cpp",
                "-I${workspaceFolder}\\src",
                "-I${workspaceFolder}\\src\\Base_Classes",
                "-I${workspaceFolder}\\src\\Screens",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                // "-w",
                // "-Wl,-subsystem,windows",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-o",
                "${workspaceFolder}\\bin\\wgg.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}